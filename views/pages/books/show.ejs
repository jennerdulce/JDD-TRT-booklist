<html lang="en">

<head>
  <%- include('../../layout/head') %>
</head>


<div id="container">

  <body id="show">
    <%- include('../../layout/navbar') %>
    <div id="show-div">
      <section>
        <img src="<%= data.thumbnail%>" alt="<%= data.title%>">
        <h3><%= data.title%></h3>
        <h5><%= data.author%></h5>
        <p><%= data.description%></p>
        <h4><%= data.isbn%></h4>
        <h4><%= data.bookshelf%></h4>
        <div id="results-buttons">
          <form action="/edit/<%= data.id %>" method="GET">
            <button>Update Details</button>
          </form>
          <form action="/delete/<%= data.id %>?_method=DELETE" method="POST">
            <button>Delete</button>
          </form>
        </div>
      </section>
      
    </div>
    
    <%- include('../../layout/footer') %>
  </body>
  
</div>

</html>