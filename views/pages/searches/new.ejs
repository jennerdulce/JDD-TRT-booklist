<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/reset.css" type="text/css">
  <link rel="stylesheet" href="/styles/base.css" type="text/css">
  <link rel="stylesheet" href="/styles/layout.css" type="text/css">
  <title>Booklist App</title>
</head>

<body>
  <!-- <p><a href="/books">Book list</a></p> -->

  <div id="show">
    <nav>
      <h1>Best Books!</h1>
      <p>[ ]</p>
    </nav>
    <h2>Search by Title or Author</h2>
    <form action="/newSearches" method="POST">
      <input type="text" name="search" id="" placeholder="Enter a title or author">
      <div id="title">
        <label for="title">Title</label>
        <input type="radio" id="title" value="title" name="keyword">
      </div>
      <div id="author">
        <label for="author">Author</label>
        <input type="radio" id="author" value="author" name="keyword">
      </div>
      <input type="submit" value="Search the Google Book API">
    </form>
    <footer>
      <a class="social" href="#">Twitter</a>
      <a class="social" href="#">Facebook</a>
      <a class="social" href="#">Instagram</a>
      <a class="social" href="#">Other</a>
    </footer>
  </div>
  
</body>

</html>
